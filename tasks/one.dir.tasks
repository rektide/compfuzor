---
- shell: test -d $a; echo $?
  register: no_a
- shell: test -d $b; echo $?
  register: no_b
- file: path=$a state=dir
  when: no_a.stdout == "1" and no_b.stdout == "1"
- file: src=$a dest=$b state=link 
  when: no_a.stdout == "0" and no_b.stdout == "1"
- file: src=$b dest=$a state=link 
  when: no_a.stdout == "1" and no_b.stdout == "0"
