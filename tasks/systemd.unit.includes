- template: src="files/{{TYPE}}/{{TYPE}}.{{include}}" dest="{{SYSTEMD_UNIT_DIR}}/{{NAME}}.{{include}}"
  when: "SYSTEMD_{{include|upper}} is defined and SYSTEMD_{{include|upper}} == True"
- template: src="files/{{TYPE}}/{{hostvars[inventory_hostname]['SYSTEMD_'+include|upper}}.{{include}}" dest="{{SYSTEMD_UNIT_DIR}}/{{hostvars[inventory_hostname]['SYSTEMD_'+include|upper]}}.{{include}}"
  when: "SYSTEMD_{{include|upper}} is defined and not not SYSTEMD_{{include|upper}} and SYSTEMD_{{include|upper}} != True"
- template: src="files/{{TYPE}}/{{item}}" dest="{{SYSTEMD_UNIT_DIR}}/{{item}}"
  with_items: "SYSTEMD_{{include|upper}}S"
  when: "SYSTEMD_{{include|upper}}S is defined"
