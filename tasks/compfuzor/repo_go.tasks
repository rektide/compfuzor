- name: 'Compfuzor: add go repo'
  set_fact:
    REPOS: "{{ REPOS|default({})|combine(repo) }}"
  loop: "{{ REPO_GO|default([])|arrayitize }}"
  vars:
    go_url: "{{item}}"
    repo: "{ '{{GO_DIR}}': '{{item}}' }"
  when: REPO_GO|default(False)
- name: 'add GOPATH to ENV'
  set_fact:
    ENV: "{{ ENV|default({})|combine({'GOPATH': '{{REPO_DIR}}'}) }}"
