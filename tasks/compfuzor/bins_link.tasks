---
- name: "Compfuzor: install `BINS`"
  file:
  args:
    src: "{{(item.link if item.link != True else item.name)|defaultDir(BINS_DIR)}}"
    dest: "{{BINS_DIR}}/{{item.dest|default(item.name)}}"
  with_items: "{{BINS|default([])}}"
  when: item is mapping and item.link|default(False) and item.delay|default(False) == delay_phase|default(False)
