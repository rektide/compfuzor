---
# build include variable
- name: "Compfuzor: source {{include|upper}} path variable (from vars)"
  set_indirect: var="{{include|upper}}" val="{{ vars[include|upper]|default(hostvars[inventory_hostname][include|upper+'S_DIR']+'/'+NAME) }}"
  when: vars[include|upper] is defined and {{include|upper}} is not defined
- name: "source {{include|upper}} path variable (from hostvars)"
  set_indirect: var="{{include|upper}}" val="{{ hostvars[inventory_hostname][include|upper+'S_DIR']+'/'+NAME }}"
  when: hostvars[inventory_hostname][include|upper+'S_DIR'] is defined and {{include|upper}} is not defined
