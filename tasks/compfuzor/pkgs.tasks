---
- name: "Compfuzor: gather list of packages"
  set_fact:
    _pkgs: "{{ _pkgs|default(PKGS|default([])) + hostvars[inventory_hostname][item]|default(vars[item]) }}"
  loop: "{{ PKGSET|default([])|arrayitize + PKGSETS|default([]) }}"
- name: install pkgs
  apt:
    state: "{{APT_INSTALL}}"
    pkg: "{{_pkgs}}"
  become: "{{ PKG_BECOME|default(True) }}"
  when: _pkgs is defined and _pkgs|length > 0
