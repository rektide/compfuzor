---
- name: "Compfuzor: create `LINKS`"
  file: src="{{ DIR+'/' if item[1]|first != '/' and item[1]|first != '~' else '' }}{{ item[1] }}" dest="{{ DIR+'/' if item[0]|first != '/' and item[0]|first != '~' else '' }}{{item[0]}}" state=link
  with_items: LINKS.items()
  when: LINKS|default(False) and not LINK_BYPASS|default(False)
