---
- name: "Link `BINS` into `GLOBAL_BINS_DIR`"
  file: src="{{BINS_DIR}}/{{item.dest|default(item.name,true)|default(item.global,true) if item is mapping else item}}" dest="{{GLOBAL_BINS_DIR}}/{{item.dest|default(item.name,true)|default(item.global,true) if item is mapping else item}}" state=link
  with_items: BINS
  when: item.global|default(False) or item.src|default(item.name,true)|default(False)
